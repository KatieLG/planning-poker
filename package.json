{
  "name": "planning-poker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm:dev --workspace=backend\" \"npm:dev --workspace=frontend\"",
    "install:all": "npm install && cd shared && npm install && cd ../backend && npm install && cd ../frontend && npm install && cd ..",
    "build": "npm run install:all && npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm install && npm run build",
    "start": "concurrently -k -n backend,frontend -c blue,green \"npm:start --workspace=backend\" \"npm:preview --workspace=frontend\"",
    "lint": "concurrently -k -n backend,frontend,shared -c blue,green,yellow \"npm:lint --workspace=backend\" \"npm:lint --workspace=frontend\" \"npm:lint --workspace=shared\"",
    "format": "concurrently -k -n backend,frontend,shared -c blue,green,yellow \"npm:format --workspace=backend\" \"npm:format --workspace=frontend\" \"npm:format --workspace=shared\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0"
  }
}
